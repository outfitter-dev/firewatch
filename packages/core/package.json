  "scripts": {
    "build": "bunx tsc -p tsconfig.json",
    "check": "bunx tsc --noEmit"
  },
  "dependencies": {
    "env-paths": "^3.0.0",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@types/bun": "^1.3.6"
  }
