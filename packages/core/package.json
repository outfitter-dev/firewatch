{
  "name": "@outfitter/firewatch-core",
  "version": "0.1.0",
  "description": "Core library for Firewatch - GitHub PR activity logger",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./schema": {
      "types": "./dist/schema/index.d.ts",
      "import": "./dist/schema/index.js"
