{
  "name": "@outfitter/firewatch",
  "version": "0.2.0",
  "private": true,
  "description": "GitHub PR activity logger with pure JSONL output for jq-based workflows",
  "homepage": "https://github.com/outfitter-dev/firewatch#readme",
  "bugs": {
    "url": "https://github.com/outfitter-dev/firewatch/issues"
  },
  "license": "MIT",
  "author": "Matt Galligan",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/outfitter-dev/firewatch.git"
  },
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "type": "module",
  "scripts": {
    "dev": "bun run --filter @outfitter/firewatch-cli dev",
    "build": "bun run --filter '*' build",
    "lint": "oxlint",
    "lint:fix": "oxlint --fix",
    "format": "oxfmt",
    "format:check": "oxfmt --check",
    "check": "oxlint && bun run --filter '*' check",
    "test": "bun test",
    "verify-parity": "bun scripts/verify-gh-parity.ts",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "bun run build && changeset publish"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.2",
    "@changesets/cli": "^2.27.1",
    "@types/bun": "^1.3.6",
    "oxfmt": "^0.23.0",
    "oxlint": "^1.38.0",
    "typescript": "^5.7.0",
    "ultracite": "7.0.11"
  }
}
