{
  "name": "@outfitter/firewatch-mcp",
  "version": "0.2.0",
  "description": "MCP server for Firewatch",
  "bin": {
    "fw-mcp": "./bin/fw-mcp.ts"
  },
  "type": "module",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "bin",
    "src",
    "dist"
  ],
  "exports": {
    ".": "./src/index.ts"
  },
  "scripts": {
    "dev": "bun --watch bin/fw-mcp.ts",
    "build": "bun build ./bin/fw-mcp.ts --outfile dist/fw-mcp.js --target bun",
    "check": "bunx tsc -b"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "@outfitter/firewatch-core": "workspace:*",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@types/bun": "^1.3.6"
  }
}
