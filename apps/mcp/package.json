{
  "name": "@outfitter/firewatch-mcp",
  "version": "0.2.0",
  "description": "MCP server for Firewatch",
  "bin": {
    "fw-mcp": "./bin/fw-mcp.ts"
  },
  "files": [
    "bin",
    "dist",
    "src"
  ],
  "type": "module",
  "exports": {
    ".": "./src/index.ts"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "dev": "bun --watch bin/fw-mcp.ts",
    "build": "bun build ./bin/fw-mcp.ts --outfile dist/fw-mcp.js --target bun",
    "check": "bunx tsc -b"
  },
  "dependencies": {
    "@outfitter/config": "^0.3.0",
    "@outfitter/contracts": "^0.4.1",
    "@outfitter/firewatch-core": "workspace:*",
    "@outfitter/firewatch-shared": "workspace:*",
    "@outfitter/logging": "^0.4.1",
    "@outfitter/mcp": "^0.4.2",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "@types/bun": "^1.3.6"
  }
}
