{
  "name": "@outfitter/firewatch-cli",
  "version": "0.1.0",
  "description": "CLI for Firewatch - GitHub PR activity logger",
  "bin": {
    "fw": "./bin/fw.ts"
  },
  "type": "module",
  "scripts": {
    "dev": "bun --watch bin/fw.ts",
    "build": "bun build ./bin/fw.ts --compile --outfile dist/fw",
    "check": "bunx tsc -b"
  },
  "dependencies": {
    "@outfitter/firewatch-core": "workspace:*",
    "@outfitter/firewatch-mcp": "workspace:*",
    "commander": "^13.0.0",
    "ora": "^8.1.1"
  },
  "devDependencies": {
    "@types/bun": "^1.3.6"
  }
}
