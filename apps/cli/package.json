{
  "name": "@outfitter/firewatch-cli",
  "version": "0.2.0",
  "description": "CLI for Firewatch - GitHub PR activity logger",
  "bin": {
    "fw": "./bin/fw.ts"
  },
  "files": [
    "bin",
    "dist",
    "src"
  ],
  "type": "module",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "dev": "bun --watch bin/fw.ts",
    "build": "bun build ./bin/fw.ts --compile --outfile dist/fw && bun scripts/copy-plugin.ts",
    "build:binary": "bun build ./bin/fw.ts --compile --outfile dist/fw",
    "check": "bunx tsc -b"
  },
  "dependencies": {
    "@outfitter/cli": "^0.5.2",
    "@outfitter/config": "^0.3.3",
    "@outfitter/firewatch-core": "workspace:*",
    "@outfitter/firewatch-mcp": "workspace:*",
    "@outfitter/firewatch-shared": "workspace:*",
    "@outfitter/schema": "^0.2.2",
    "@outfitter/types": "^0.2.3",
    "commander": "^14.0.0",
    "ora": "^8.1.1",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/bun": "^1.3.6"
  }
}
